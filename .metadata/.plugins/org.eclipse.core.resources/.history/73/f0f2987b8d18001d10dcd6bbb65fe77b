import javax.swing.JOptionPane;

public class MiPrimeraClase {

	public static void main(String[] args) {
		String chain;
		int number;
		char character;
		float floatingPointNumber;
		double largestFloatingPointNumber;
		
		chain = JOptionPane.showInputDialog("Escribe una cadena de carácteres: "); // El método showInputDialog() por defecto devuelve un String
		number = Integer.parseInt(JOptionPane.showInputDialog("Escribe un número"));
		character = JOptionPane.showInputDialog("Escribe un número").charAt(0);
		floatingPointNumber = Float.parseFloat(JOptionPane.showInputDialog("Escribe un número"));
		largestFloatingPointNumber = Double.parseDouble(JOptionPane.showInputDialog("Escribe un número"));
		
		// System.out.println("Chain: "+chain+"\nNumber: "+number+"Character: "+character);
		JOptionPane.showMessageDialog(null,"Chain: "+chain+"\nNumber: "+number+"Character: "+character);
	}
}
