import java.util.Scanner;

public class MiPrimeraClase {

	public static void main(String[] args) {
		Scanner entrada = new Scanner(System.in);
		
		System.out.println("Escribe un número entero: ");
		
		long guardarNumero = entrada.nextInt(); // al usar el método de Scanner es cuando le da la opción de escribir por consola al usuario
		
		System.out.println("El número que has escrito es: "+guardarNumero);
	}
}
